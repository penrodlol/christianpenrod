---
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import Text from '../../text.astro';

type Props = Omit<ComponentProps<typeof Text<'li'>>, 'as'> & { current: number; max: number };

const { class: className, current, max, size, ...props } = Astro.props;
---

<Text
  {...props}
  as="li"
  size={size ?? '2'}
  class={twMerge('flex w-14 items-center justify-center select-none', className)}
>
  {current} of {max}
</Text>
