---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'div'> & { value: string };

const { class: className, value, ...props } = Astro.props;
---

<div
  {...props}
  role="tabpanel"
  tabindex="0"
  x-cloak
  :id={`$id('tabs') + '-tabpanel-${value}'`}
  :aria-labelledby={`$id('tabs') + '-tab-${value}'`}
  :aria-hidden={`active !== "${value}"`}
  class={twMerge(
    'focus-visible:ring-ring p-6 focus-visible:ring-1 focus-visible:outline-none aria-hidden:hidden',
    className,
  )}
>
  <slot />
</div>
