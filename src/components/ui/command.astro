---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import Icon from './icon.astro';

type Props = HTMLAttributes<'kbd'> & { key?: string; icon?: string };

const { class: className, key, icon, ...props } = Astro.props;
---

<kbd
  {...props}
  x-data
  class={twMerge(
    'bg-surface-2 text-foreground-1 border-border rounded-sm border px-2 py-0.5 font-sans !text-xs leading-none',
    className,
  )}
>
  {key}
  {icon && <Icon name={icon} class="size-3" />}
</kbd>
