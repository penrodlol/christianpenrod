---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import Clipboard from './clipboard.astro';

type Props = HTMLAttributes<'figure'>;

const { class: className, ...props } = Astro.props;
---

<figure
  {...props}
  class={twMerge(
    'relative rounded border bg-[--shiki-color-background] text-xs',
    '[&_figcaption]:rounded-t [&_figcaption]:border-b [&_figcaption]:bg-2 [&_figcaption]:px-4 [&_figcaption]:py-0.5 [&_figcaption]:text-2',
    '[&:not(:has(figcaption))]:before:h-7 [&:not(:has(figcaption))]:before:bg-2 [&:not(:has(figcaption))]:before:content-[""]',
    '[&:not(:has(figcaption))]:before:block [&:not(:has(figcaption))]:before:rounded-t [&:not(:has(figcaption))]:before:border-b',
    '[&_code]:font-sans [&_code]:[counter-reset:line] [&_code]:[font-size:--shiki-font-size] [&_pre]:overflow-auto [&_pre]:p-4 [&_pre]:scrollbar-thin',
    '[&_[data-line]::before]:mr-2 [&_[data-line]::before]:[content:counter(line)] [&_[data-line]::before]:[counter-increment:line]',
    '[&_[data-highlighted-line]_span]:opacity-30 [&_[data-line]::before]:inline-block [&_[data-line]::before]:w-5 [&_[data-line]::before]:opacity-30',
    className,
  )}
>
  <Clipboard class="absolute -top-0.5 right-0 text-2" target="$el.parentElement.querySelector('pre')" />
  <slot />
</figure>
