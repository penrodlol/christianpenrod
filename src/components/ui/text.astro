---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { tv } from 'tailwind-variants';

type Props<Tag extends HTMLTag = 'p'> = Polymorphic<{ as: Tag }>;

const variants = tv({
  variants: {
    Tag: {
      p: 'max-w-prose',
      h1: 'text-4xl font-medium',
      h2: 'text-2xl font-medium',
      h3: 'text-base font-medium',
    },
  },
});

const { as: Tag = 'p', class: className, ...props } = Astro.props;
---

<Tag {...props} class={variants({ Tag, className })}><slot /></Tag>
