---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'blockquote'>;

const props = Astro.props;
---

<blockquote {...props} class="flex rounded border bg-2 italic">
  <div class="w-3 shrink-0 rounded-l border-r bg-3"></div>
  <div class="px-4 py-2"><slot /></div>
</blockquote>
