---
import { type HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'ul'>;

const { class: className, ...props } = Astro.props;
---

<ul
  {...props}
  :id="$id('navigation-menu-dropdown')"
  x-show="open"
  x-ref="navigationMenuDropdownLinks"
  class={twMerge(
    'bg-surface-1 border-border absolute top-full right-0 z-50 mt-1 hidden min-w-[10rem] rounded border shadow-sm',
    'before:absolute before:-top-2 before:h-2 before:w-full before:content-[""]',
    'group-focus-within:block group-hover:block',
    'scale-100 opacity-100 motion-safe:transition-all starting:scale-90 starting:opacity-0',
    className,
  )}
>
  <slot />
</ul>
