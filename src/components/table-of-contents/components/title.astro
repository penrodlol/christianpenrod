---
import Icon from '@/components/icon.astro';
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Text<'h2'>>, 'as'> & { icon?: string };

const { class: className, size, weight, icon, ...props } = Astro.props;
---

<Text
  {...props}
  as="h2"
  size={size ?? '1'}
  weight={weight ?? 'bold'}
  class={twMerge('flex items-center gap-2', className)}
>
  {icon && <Icon name={icon} variant="subtle" />}
  <slot />
</Text>
