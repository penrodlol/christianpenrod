---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'code'>;

const { class: className, ...props } = Astro.props;
---

<code
  {...props}
  class={twMerge(
    'font-sans [font-size:0.85rem] [counter-reset:line]',
    'bg-code-background [&:not(&:has(span))]:text-code-text',
    '[&:not(&:has(span))]:border-border [&:not(&:has(span))]:inline-flex [&:not(&:has(span))]:rounded [&:not(&:has(span))]:border',
    '[&:not(&:has(span))]:mx-0.5 [&:not(&:has(span))]:px-1 [&:not(&:has(span))]:whitespace-nowrap',
    '[&:not(&:has(span))]:decoration-clone [&:not(&:has(span))]:leading-normal',
    className,
  )}
>
  <slot />
</code>
