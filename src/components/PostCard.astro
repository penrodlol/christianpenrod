---
import type { CollectionEntry } from 'astro:content';
import Date from './Date.astro';

type Props = { post: CollectionEntry<'posts'> };

const { post } = Astro.props;
---

<a
  href={`/blog/${post.slug}`}
  aria-label={`${post.data.title}. ${post.data.description}`}
  class={`flex h-full flex-col rounded-md bg-2 p-4 shadow
          hover:outline-2 hover:outline hover:outline-brand
          hover:outline-offset-4`}
>
  <span class="font-normal text-brand text-base">{post.data.title}</span>
  <p class="text-sm">{post.data.description}</p>
  <div class="mt-auto pt-4 text-1 text-xs">
    <Date>{post.data.published}</Date>
  </div>
</a>
