---
import type { MarkdownHeading } from 'astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import Component from '../../link.astro';

type Props = ComponentProps<typeof Component> & Partial<MarkdownHeading>;

const { class: className, slug, text, depth, ...props } = Astro.props;
---

<Component
  {...props as any}
  href={`#${slug}`}
  class={twMerge('justify-start py-0.5 hover:text-brand motion-safe:transition-colors', className)}
>
  {text}
</Component>
