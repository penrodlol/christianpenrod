---
import { twJoin } from 'tailwind-merge';
import Icon from './ui/icon.astro';
import Separator from './ui/separator.astro';
import Text from './ui/text.astro';

const slot = await Astro.slots.render('default');
const hash = slot.toLowerCase().replace(/ /g, '-');
---

<div class="flex flex-col gap-2">
  <a
    id={hash}
    href={`#${hash}`}
    class={twJoin(
      'group max-w-max rounded hover:text-brand',
      'focus-visible:outline-none focus-visible:ring motion-safe:transition-colors',
    )}
  >
    <Text as="h2" class="flex items-center gap-2 uppercase text-lg">
      {slot}
      <Icon name="link" class="hidden animate-in group-hover:block motion-safe:fade-in-0 motion-safe:zoom-in-75" />
    </Text>
  </a>
  <Separator />
</div>
