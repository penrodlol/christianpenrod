---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'figcaption'>;

const { class: className, ...props } = Astro.props;
---

<figcaption
  {...props}
  class={twMerge(
    'bg-surface-2 text-foreground-2 border-border flex h-8 items-center rounded-t border-b px-4 py-0.5 text-xs',
    className,
  )}
>
  <slot />
</figcaption>
