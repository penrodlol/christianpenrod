---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'figcaption'>;

const { class: className, ...props } = Astro.props;
---

<figcaption {...props} class={twMerge('rounded-t border-b bg-2 px-4 py-0.5 text-2 text-xs', className)}>
  <slot />
</figcaption>
