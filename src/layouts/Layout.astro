---
import Anchor from '@components/Anchor.astro';
import '@fontsource/outfit/300.css';
import '@fontsource/outfit/400.css';

type Props = { title?: string; description?: string; og?: string };

const favicon = await import('@public/favicon.svg?raw');
const {
  title = 'Christian Penrod | Front-End Web Developer',
  description = 'Developing for the web since 2015, based in Pittsburgh PA.',
  og = 'og.webp',
} = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="og:type" content="website" />
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
    <meta name="og:image" content={new URL(og, Astro.site)} />
    <meta name="og:image:alt" content={Astro.url.pathname} />
    <meta name="og:site_name" content={Astro.site} />
    <meta name="og:image:width" content="1280" />
    <meta name="og:image:height" content="675" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content={`@${import.meta.env.USERNAME}`} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(og, Astro.site)} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href={new URL(Astro.url.pathname, Astro.site)} rel="canonical" />
  </head>
  <body
    class={`mx-auto flex min-h-screen max-w-screen-lg flex-col bg-1 font-sans
            font-light tracking-wide text-1 text-base px-fluid-4
            selection:bg-brand selection:bg-opacity-25`}
  >
    <header class="flex items-center gap-4 py-4 text-sm">
      <a href="/" class="mr-auto h-8 w-8 md:mr-4" aria-label="Home">
        <Fragment set:html={favicon.default} aria-hidden />
      </a>
      <Anchor href="/blog">Blog</Anchor>
      <Anchor href="/career">Career</Anchor>
      <Anchor href={import.meta.env.GITHUB_PROFILE} nostyle>Github</Anchor>
      <Anchor href={`mailto:${import.meta.env.EMAIL}`}>Email</Anchor>
    </header>
    <main class="mb-fluid-5 flex-1 motion-safe:animate-fade-in"><slot /></main>
    <footer class="self-center p-2 text-center text-2 text-sm">
      <p>Created by: Christian Penrod Â©{new Date().getUTCFullYear()}</p>
      <p>
        Built with: <Anchor href="https://docs.astro.build">Astro</Anchor>
        on <Anchor href="https://netlify.com/docs">Netlify</Anchor>
      </p>
    </footer>
  </body>
</html>
